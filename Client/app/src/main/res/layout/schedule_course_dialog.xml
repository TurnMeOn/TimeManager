<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080">
    <LinearLayout
        android:id="@+id/dialogLinear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:padding="4dp"
            android:text="课名:"/>
        <EditText
            android:id="@+id/SCourseEditTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:padding="4dp"
            android:hint="未填写"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialogLinear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dialogLinear1"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:padding="4dp"
                android:text="地点:"/>
            <EditText
                android:id="@+id/SCourseEditTextRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:padding="4dp"
                android:hint="未填写"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialogLinear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogLinear2"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:padding="4dp"
            android:text="周数:"/>
        <TextView
            android:id="@+id/dialogweek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:padding="4dp"
            android:text="1-20周"
            android:background="@drawable/textview_be_gray"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialogLinear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogLinear3"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:padding="4dp"
            android:text="时间:"/>
        <TextView
            android:id="@+id/dialogtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:padding="4dp"
            android:text="未填写"
            android:background="@drawable/textview_be_gray"/>
    </LinearLayout>
</RelativeLayout>